<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="95dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_width="104dp"
                    android:layout_height="44dp"
                    android:id="@+id/mTitlee" android:textSize="24sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="120dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="104dp"
                    android:layout_height="44dp"
                    android:id="@+id/mHours" android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/mTitlee"
                    app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="28dp"/>
            <TextView
                    android:text="Playtime:"
                    android:layout_width="104dp"
                    android:layout_height="44dp"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Gametitle:"
                    android:layout_width="111dp"
                    android:layout_height="44dp"
                    android:textSize="24sp"
                    android:id="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/mTitlee"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>